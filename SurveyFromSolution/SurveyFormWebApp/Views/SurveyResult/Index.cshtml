@model List<SurveyFormWebApp.Models.Survey> 

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Resultados de encuestas</h1>
            <hr />
        </div>
        <div class="col-lg-7 col-md-12">
            <h4>Ultima encuesta enviada</h4>
            <ul class="list-group">
                @foreach (var item in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                       @item.Name
                        <span>Formularios enviados:    <span class="badge badge-primary badge-pill">@item.Results.Count()</span></span>
                        <a class="btn btn-info btn-sm" asp-action="SurveyFormRepo" asp-route-id="@item.Id">Resultados</a>
                    </li>
                }

            </ul>
        </div>
    </div>
</div>