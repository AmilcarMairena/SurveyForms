@model SurveyFormWebApp.Models.ViewModels.SurveyFormViewModel


<form class="container my-2" method="post" asp-action="Upsert">
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (Model.SurveyObj.Id != Guid.Empty)
    {
        <input asp-for="SurveyObj.Id" hidden />
    }
    <div class="row">
        <div class="col-lg-12">
            <h1>@((Model.SurveyObj.Id != Guid.Empty)?"Actualizada":"Crea") tu formulario</h1>
            <hr />
        </div>
        <div class="col-lg-6 col-md-12">
            <div class="form-group">
                <label asp-for="SurveyObj.Name"></label>
                <input class="form-control" asp-for="SurveyObj.Name" />
            </div>
            <div class="form-group">
                <label asp-for="SurveyObj.SurveyDescription"></label>
                <textarea class="form-control" asp-for="SurveyObj.SurveyDescription" placeholder="Agregar una descripcion para esta encuesta" style="min-height:150px"></textarea>
            </div>
        </div>
        <div class="col-lg-12">
            <p>Agregar los campos correspondientes de la encuesta <span class="text-muted"> Puedes agregar tantos como quieras.</span> </p>
            <button type="button" class="btn btn-secondary" data-target="#fieldModal" data-toggle="modal">Agregar campo</button>
        </div>
        <div class="col-lg-12">
            <table class="table table-hover table-striped my-5" id="fieldsTable">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Titulo</th>
                        <th>Es requerido</th>
                        <th>Tipo de campo</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_FieldModal" />

    <script src="~/js/SurveyConstructor.js"></script>
}



